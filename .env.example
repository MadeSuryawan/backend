# Application Settings
APP_NAME=BaliBlissed API
APP_VERSION=1.0.0
DEBUG=False

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
LOG_TO_FILE=false
PRODUCTION_FRONTEND_URL=

# =============================================================================
# Database Settings
# =============================================================================
# IMPORTANT: Use only ONE of the DATABASE_URL options below.
# Comment out the one you're not using with # at the start of the line.

# -----------------------------------------------------------------------------
# Option 1: Local PostgreSQL (Development)
# -----------------------------------------------------------------------------
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/baliblissed

# -----------------------------------------------------------------------------
# Option 2: Neon PostgreSQL (Cloud/Production)
# -----------------------------------------------------------------------------
# Get your connection string from: https://console.neon.tech
# Click on your project -> Connection String -> Copy the URL
# Note: For asyncpg, use '?ssl=require' instead of '?sslmode=require'
# 
# Example:
# DATABASE_URL=postgresql+asyncpg://user:password@your-project-id.us-east-1.aws.neon.tech/dbname?ssl=require
#
# Uncomment the line below and replace with your actual Neon credentials:
# DATABASE_URL=postgresql+asyncpg://your_user:your_password@your-project-id.region.aws.neon.tech/your_db?ssl=require

# -----------------------------------------------------------------------------
# Database Debug Settings
# -----------------------------------------------------------------------------
DATABASE_ECHO=False  # Set to True to log all SQL queries (debugging)

# Database Connection Pool Settings
POOL_SIZE=5
MAX_OVERFLOW=10
POOL_TIMEOUT=30
POOL_RECYCLE=3600

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Pagination Defaults
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# =============================================================================
# Storage Configuration
# =============================================================================
# Storage provider: "local" for development, "cloudinary" for production
STORAGE_PROVIDER=local
UPLOADS_DIR=uploads

# Cloudinary Configuration (required when STORAGE_PROVIDER=cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=your_cloudinary_url

# Profile Picture Settings
PROFILE_PICTURE_MAX_SIZE_MB=5
PROFILE_PICTURE_MAX_DIMENSION=1024
PROFILE_PICTURE_QUALITY=85

# Google OAuth Credentials
GOOGLE_CLIENT_ID=123456789-abc123def456.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_client_secret_here

# Keep your existing Gmail credentials (different purpose!)
GMAIL_CLIENT_SECRET_FILE=secrets/client_secret.json
GMAIL_TOKEN_FILE=secrets/token.json
COMPANY_TARGET_EMAIL=suryawankusuma@gmail.com

# =============================================================================
# Redis Configuration
# =============================================================================
# Basic Redis settings (for development or simple production setups)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# Redis ACL Authentication (Redis 6.0+)
# Use this instead of just password for username/password authentication
REDIS_USERNAME=default

# Alternative: Full Redis URL (overrides individual settings)
# Format: redis://[username:password@]host:port/db or rediss:// for SSL
# REDIS_URL=redis://default:password@localhost:6379/0

# Redis SSL/TLS Configuration (Production - strongly recommended)
# Enable SSL/TLS connection (use 'true' for production)
REDIS_SSL=false

# Path to CA certificates bundle file (PEM format)
# Required for verifying Redis server certificate
# REDIS_SSL_CA_CERTS=/path/to/ca-bundle.crt

# Certificate verification mode: 'none', 'optional', or 'required' (default)
REDIS_SSL_CERT_REQS=required

# Client certificate authentication (mTLS)
# Path to client certificate file (PEM format)
# REDIS_SSL_CERTFILE=/path/to/client-cert.pem

# Path to client private key file (PEM format)
# REDIS_SSL_KEYFILE=/path/to/client-key.pem

# Verify hostname matches certificate (default: true)
REDIS_SSL_CHECK_HOSTNAME=true

# Redis Cloud / AWS ElastiCache / Azure Cache for Redis Examples:
# AWS ElastiCache with SSL:
# REDIS_SSL=true
# REDIS_HOST=master.xxx.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your-auth-token
# REDIS_SSL_CA_CERTS=/etc/ssl/certs/ca-certificates.crt

# Redis Cloud with SSL:
# REDIS_SSL=true
# REDIS_HOST=redis-xxxxx.cloud.redislabs.com
# REDIS_PORT=16789
# REDIS_USERNAME=default
# REDIS_PASSWORD=your-password
# REDIS_SSL_CA_CERTS=/etc/ssl/certs/ca-certificates.crt

# Upstash Redis (uses TLS by default):
# REDIS_URL=rediss://default:password@xxx.upstash.io:6379